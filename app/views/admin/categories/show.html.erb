<% if current_user %>
	<% if current_user.admin?%>
		<p id="notice"><%= notice %></p>

		<p>
		  <strong>Name:</strong>
		  <%= @category.name %>
		</p>

		<%= link_to 'Edit', edit_admin_category_path(@category) %> |
		<%= link_to 'Back', admin_categories_path %>
	<%else%>
		<%flash[:error] = "You are not authorize to access members!" %>
		<%controller.redirect_to root_path %>
	<%end%>
<%else%>
  	<%flash[:error] = "admin_login required!" %>
    <%controller.redirect_to new_user_session_path %>
<% end%>