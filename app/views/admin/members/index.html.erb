<% if current_user %>
<% if current_user.admin?%>
<div class="white">
	<table class = "table table-bordered">
	  <tr>
	    <th>Id</th>
	    <th>Email</th>
	    <th>Created At</th>
	    <th>Updated At</th>
	    <th>Edit</th>
	    <th>Delete</th>
	  </tr>

	   <% @members.each do |t| %>
	    <tr class="<%= cycle('table-success' ,'table-danger','table-info')%>">
	    <td><%= t.id%></td>
	    <td><%= t.email%></td>
	    <td><%= t.created_at%></td>
	    <td><%= t.updated_at%></td>
	    <td><%= link_to "Edit", edit_admin_member_path(t) %></td>
	    <td><%= link_to "Delete", admin_member_path(t),data: { confirm: "Are you sure?" }, method: :delete,class: 'btn btn-danger'%></td>
	  </tr>
	  <% end %>
	</table>
</div>
<%else%>
	<%flash[:error] = "You are not authorize to access members!" %>
	<%controller.redirect_to root_path %>
<%end%>
<%else%>
	<%flash[:error] = "admin_login required!" %>
	<%controller.redirect_to new_user_session_path %>
 <% end%>